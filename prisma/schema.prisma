generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  RIDER
  DRIVER
  ADMIN
}

enum DriverStatus {
  PENDING
  APPROVED
  SUSPENDED
}

enum RideStatus {
  REQUESTED
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum PaymentStatus {
  PENDING
  AUTHORIZED
  CAPTURED
  FAILED
  REFUNDED
}

enum PaymentProvider {
  STRIPE
  CASH
  OTHER
}

enum TransactionType {
  CHARGE
  REFUND
  PAYOUT
}

enum TransactionStatus {
  PENDING
  SUCCEEDED
  FAILED
}

enum NotificationType {
  RIDE_STATUS
  PAYMENT
  SYSTEM
}

enum NotificationChannel {
  PUSH
  EMAIL
  SMS
}

model User {
  id    String @id @default(uuid()) @db.Uuid
  email String @unique
  phone String? @unique
  name  String?
  role  UserRole @default(RIDER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  driverProfile DriverProfile?

  ridesAsRider Ride[] @relation("RiderRides")
  payments     Payment[] @relation("PayerPayments")

  notifications   Notification[]
  ratingsGiven    Rating[] @relation("RatingsGiven")
  ratingsReceived Rating[] @relation("RatingsReceived")

  @@index([role])
}

model DriverProfile {
  id            String       @id @default(uuid()) @db.Uuid
  userId        String       @unique @db.Uuid
  licenseNumber String       @unique
  status        DriverStatus @default(PENDING)
  bio           String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicles Vehicle[]
  rides    Ride[]    @relation("DriverRides")

  @@index([status])
}

model Vehicle {
  id              String @id @default(uuid()) @db.Uuid
  driverProfileId String @db.Uuid

  make        String
  model       String
  year        Int
  plateNumber String @unique
  color       String?
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  driverProfile DriverProfile @relation(fields: [driverProfileId], references: [id], onDelete: Cascade)
  rides         Ride[]

  @@index([driverProfileId])
}

model Ride {
  id              String  @id @default(uuid()) @db.Uuid
  riderId         String  @db.Uuid
  driverProfileId String? @db.Uuid
  vehicleId       String? @db.Uuid

  status RideStatus @default(REQUESTED)

  pickupAddress  String?
  dropoffAddress String?

  pickupLat  Decimal @db.Decimal(9, 6)
  pickupLng  Decimal @db.Decimal(9, 6)
  dropoffLat Decimal @db.Decimal(9, 6)
  dropoffLng Decimal @db.Decimal(9, 6)

  pickupLocation  Unsupported("geography(Point,4326)")?
  dropoffLocation Unsupported("geography(Point,4326)")?

  requestedAt DateTime @default(now())
  acceptedAt  DateTime?
  startedAt   DateTime?
  completedAt DateTime?
  canceledAt  DateTime?

  fareCents Int
  currency String @default("USD") @db.Char(3)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rider         User           @relation("RiderRides", fields: [riderId], references: [id], onDelete: Restrict)
  driverProfile DriverProfile? @relation("DriverRides", fields: [driverProfileId], references: [id], onDelete: SetNull)
  vehicle       Vehicle?       @relation(fields: [vehicleId], references: [id], onDelete: SetNull)

  payment Payment?
  ratings Rating[]

  @@index([riderId])
  @@index([driverProfileId])
  @@index([vehicleId])
  @@index([status, requestedAt])
  @@index([pickupLat, pickupLng])
  @@index([dropoffLat, dropoffLng])
  @@index([pickupLocation], type: Gist, map: "Ride_pickupLocation_gist")
  @@index([dropoffLocation], type: Gist, map: "Ride_dropoffLocation_gist")
}

model Payment {
  id      String @id @default(uuid()) @db.Uuid
  rideId  String @unique @db.Uuid
  payerId String @db.Uuid

  provider PaymentProvider
  status   PaymentStatus @default(PENDING)

  amountCents Int
  currency String @default("USD") @db.Char(3)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ride  Ride @relation(fields: [rideId], references: [id], onDelete: Cascade)
  payer User @relation("PayerPayments", fields: [payerId], references: [id], onDelete: Restrict)

  transactions Transaction[]

  @@index([payerId])
  @@index([status])
}

model Transaction {
  id        String @id @default(uuid()) @db.Uuid
  paymentId String @db.Uuid

  type   TransactionType
  status TransactionStatus @default(PENDING)

  providerRef String? @unique
  amountCents  Int

  createdAt DateTime @default(now())

  payment Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@index([paymentId])
  @@index([status])
}

model Notification {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid

  type    NotificationType
  channel NotificationChannel

  title String
  body  String

  readAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, readAt])
  @@index([createdAt])
}

model Rating {
  id          String @id @default(uuid()) @db.Uuid
  rideId      String @db.Uuid
  raterUserId String @db.Uuid
  rateeUserId String @db.Uuid

  score   Int
  comment String?

  createdAt DateTime @default(now())

  ride  Ride @relation(fields: [rideId], references: [id], onDelete: Cascade)
  rater User @relation("RatingsGiven", fields: [raterUserId], references: [id], onDelete: Restrict)
  ratee User @relation("RatingsReceived", fields: [rateeUserId], references: [id], onDelete: Restrict)

  @@unique([rideId, raterUserId])
  @@index([rateeUserId])
  @@index([rideId])
}
