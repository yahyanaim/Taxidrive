{
  "name": "backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm -w tsc -p backend/tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "pnpm -w eslint \"backend/src/**/*.ts\" --max-warnings=0",
    "typecheck": "pnpm -w tsc -p backend/tsconfig.json --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2"
  }
}
